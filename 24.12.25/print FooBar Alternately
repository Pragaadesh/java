class FooBar {
    private int n;
    private volatile boolean lockFoo = false;
    private volatile boolean lockBar = true;

    public FooBar(int n) {
        this.n = n;
    }

    public void foo(Runnable printFoo) throws InterruptedException {
        
        for (int i = 0; i < n; i++) {
            while(lockFoo){}
            lockFoo = true;
        	printFoo.run();
            lockBar = false;
        }
    }

    public void bar(Runnable printBar) throws InterruptedException {
        
        for (int i = 0; i < n; i++) {
            while(lockBar){}
            lockBar = true;
        	printBar.run();
            lockFoo = false;
        }
    }
}
